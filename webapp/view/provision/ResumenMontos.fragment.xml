<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
<VBox >

<f:Form editable="true" id="frmIngresoMontos">
            <f:formContainers>
                <f:FormContainer >
                    <f:formElements>
						<f:FormElement label="Gastos Provisionados en Soles" >
							<f:fields>
								<Text class="sapUiSmallMarginTop"
                                 text="{ path: 'worklistViewDetProvision>/montoSoles',
									type: 'sap.ui.model.type.Float',
									formatOptions: {
										style: 'standard',
										decimalSeparator: '.',
										groupingEnabled: true,
										groupingSeparator: ',',
										minFractionDigits: 2,
										maxFractionDigits: 2
									}
								} PEN"  id="txtMontoSoles"></Text>

							</f:fields>
						</f:FormElement>
						<f:FormElement label="Gastos Provisionados en DÃ³lares">
							<f:fields>
								<Text class="sapUiSmallMarginTop"
                                text="{ path: 'worklistViewDetProvision>/montoDolares',
									type: 'sap.ui.model.type.Float',
									formatOptions: {
										style: 'standard',
										decimalSeparator: '.',
										groupingEnabled: true,
										groupingSeparator: ',',
										minFractionDigits: 2,
										maxFractionDigits: 2
									}
								} USD"
                                id="txtMontoDolares"></Text>
							</f:fields>
						</f:FormElement>
                    </f:formElements>
                    <f:formElements>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
            <f:layout>
                <f:ColumnLayout
                    columnsL="2"
                    columnsM="2"
                    columnsXL="4"
                    emptyCellsLarge="1"
                    labelCellsLarge="3"/>
            </f:layout>
        </f:Form>
</VBox>
</c:FragmentDefinition>